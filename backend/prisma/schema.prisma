// src/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  name     String
  email    String   @unique
  password String
  role     Role     @default(ATTENDANT)
  tickets  Ticket[]
}

model Ticket {
  id             Int          @id @default(autoincrement())
  type           TicketType
  reason         String
  description    String
  customer       String
  vehicle        String?
  passiveContact Boolean
  contactType    ContactType?
  status         TicketStatus @default(OPEN)
  assignedTo     User?        @relation(fields: [userId], references: [id])
  userId         String?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  deletedAt      DateTime?
  deadline       DateTime?
}

enum TicketType {
  SUPPORT
  SALES
  RELATIONSHIP
  OPERATIONAL
}

enum ContactType {
  PHONE
  EMAIL
  CHAT
  IN_PERSON
}

enum TicketStatus {
  OPEN
  IN_PROGRESS
  CLOSED
}

enum Role {
  ADMIN
  ATTENDANT
}
